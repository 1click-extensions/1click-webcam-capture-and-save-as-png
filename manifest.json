  {
    "name": "1click Webcam to Picture",
    "version": "0.1",
    "description": "get image file from your webcam",
    "permissions": [
          "tabs",
          "downloads",
          "videoCapture"
        ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "web_accessible_resources":[
      "pages/capture.html"
    ],
    "browser_action":{
      "default_icon": "images/browseraction.png",
      "default_title": "Save picture from webcam"
      },
    "offline_enabled": true,
    "default_locale": "en",
    "icons": {
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "manifest_version": 2
  }